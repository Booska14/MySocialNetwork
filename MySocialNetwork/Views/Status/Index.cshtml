@model MySocialNetwork.ViewModels.StatusIndexViewModel

@{
    ViewBag.Title = "Home";
}

@using (Html.BeginForm("Update", "Status"))
{
    <fieldset>
        <legend>Update your status</legend>
            @Html.LabelFor(m => m.StatusMessage)
            @Html.TextBoxFor(m => m.StatusMessage)
        <input type="submit" value="Update" />
    </fieldset>
}

@Html.Partial("StatusPartial", Model.Status)
